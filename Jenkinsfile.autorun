pipeline {
  agent any

  options {
    timeout(time: 2, unit: 'MINUTES')
  }

  environment {
    ARTIFACT_ID = "elbuo8/webapp:${env.BUILD_NUMBER}"
  }
   stages {
   stage('Building image - GRUPO 4') {
      steps{
          sh '''
          docker build -t 127.0.0.1:5000/grupo-4:app_registry_AUTORUN .
             '''  
        }
    }
  
  
    stage('MOCHA tests - THE') {
      steps {
        sh "docker run 127.0.0.1:5000/grupo-4:app_registry_AUTORUN npm test"
      }
    }
   stage('Deploy Image - BEST !!!') {
      steps{
        sh '''
        docker push 127.0.0.1:5000/grupo-4:app_registry_AUTORUN
        '''
        }
      }
    stage('Check image DEPLOY') {
      steps{
        sh '''
        curl http://gateway.docker.internal:5000/v2/_catalog
        curl http://gateway.docker.internal:5000/v2/grupo-4/tags/list
        '''
        }
      }       
    stage('RUN Image APP_REGISTRY') {
          steps{
            sh '''
            docker rm -f testapp_registry
            docker run -d --name testapp_registry -p 3000:3000 127.0.0.1:5000/grupo-4:app_registry_AUTORUN
            '''
            }
          }
    stage('List running contanners') {
          steps{
            sh '''
            docker ps --format "table {{.Names}}\t{{.Image}}\t{{.Ports}}"
            '''
            }
          }
    stage('Test APP - SUM') {
      steps{
        sh '''

        curl http://gateway.docker.internal:3000/add/200/59
        '''
        }
      }       
    stage('Test APP - LESS') {
      steps{
        sh '''
        curl http://gateway.docker.internal:3000/less/200/59
        '''
        }
      }      
    }
}


    
  
